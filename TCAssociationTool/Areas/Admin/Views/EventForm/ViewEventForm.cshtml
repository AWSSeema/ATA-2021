

@{
    ViewBag.Title = "AddMailTemplate";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";

    TCAssociationTool.Entities.EventForm objEventForm = ViewBag.objEventForm;
    string imgurl = System.Configuration.ConfigurationManager.AppSettings["baseurl"] + "Content/documents/";
}

<script type="text/javascript" src="ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="ckfinder/ckfinder.js"></script>

<script type="text/javascript">
    function Validate() {
        var return_val = true;

       if ($.trim($('#comments').val()) == '') { document.getElementsByName('comments')[0].placeholder = 'Required'; $('#comments').focus().addClass("validate"); return false; } else { $('#comments').focus().removeClass("validate"); }


        return return_val;
    }



    function ResetValidateClass() {

        $('#firstname').removeClass("validate");
        $('#firstname').removeClass("validate");

    }

    $(document).ready(function () {
        $('#wGolf2021').addClass('active');
        $('#Others').addClass('active');
        $('.alert-danger').append('<i class="fa fa-ban"></i><button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>');
        $('.alert-success').append('<i class="fa fa-check"></i><button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>');
      //  $(".date").datepicker({ changeMonth: true, changeYear: true, yearRange: "-90:+0", altFormat: 'mm/dd/yy' });
        $("#datesent").datepicker({ changeMonth: true, changeYear: true, yearRange: "-50:+50", altFormat: 'dd/mm/yy', dateFormat: "dd/mm/yy" });


    });
</script>

<!-- breadcumb -->
<div class="content-header">
    <h1>Registrations</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="@Url.Action("Index", "EventForm")"><i class="fa fa-print"></i>Registrations</a></li>
        <li class="active">View Registration</li>
    </ol>
</div>
<!--end breadcumb -->


<div class="content">
    <!-- Main content -->
    <div id="divmessage">
        @if (TempData["message"] != null)
        {@Html.Raw(TempData["message"].ToString())}

        @if (ViewBag.message != null)
        {@Html.Raw(ViewBag.message.ToString())}
    </div>
    <div class="box validation">
        <!-- /.box-header -->
        @*<div class="box-header">
            <h3 class="box-title dis-in">View EventForm </h3>
        </div>*@
        @using (Html.BeginForm("EventFormCommentUpdate", "EventForm", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="hidden" name="Id" id="Id" value="@objEventForm.Id" />
            <div class="box">
                <!-- /.box-header -->
                <div class="box-header">
                    <h3 class="box-title dis-in">Event Registration Details</h3>
                </div>

                <div class="box-body">
                    <div class="row">

                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>First Name :</label>
                            @objEventForm.firstname
                        </div>

                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>Last Name :</label>
                            @objEventForm.lastname
                        </div>

                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label> Email :</label>
                            @objEventForm.email
                        </div>

                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label> Phone No :</label>
                            @objEventForm.phone
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>Address 1 :</label>
                            @objEventForm.address
                        </div>
                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>City :</label>
                            @objEventForm.city
                        </div>
                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>State :</label>
                            @objEventForm.state
                        </div>

                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>ZipCode :</label>
                            @objEventForm.zip
                        </div>
                    </div>


                    <div class="row">


                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>No. of Guests :</label>
                            @objEventForm.members
                        </div>
                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>Is ATA Member :</label>
                            @objEventForm.ismember
                        </div>
                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>Date Sent :</label>
                            @objEventForm.datesent.ToString("dd/MM/yyy")
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-xs-12 col-lg-3 col-sm-6">
                            <label>Admin Comments  :</label>
                            <textarea id="comments" name="comments" class="form-control">@objEventForm.comments</textarea>

          
                        </div>

                    </div>


                </div>

            </div>




            <div class="box">
                <!-- /.box-header -->
                <div class="box-body text-right">
                    <input type="submit" onclick="return Validate()" class="btn btn-primary" id="add" value="Update" name="add">

                    <a class="btn btn-info" href="@Url.Action("Index", "EventForm")">Cancel</a>
                </div>
                <!-- /.box-body -->
            </div>
        }
        <!-- /.box-body -->
    </div>
    <!-- /.content -->
</div>

