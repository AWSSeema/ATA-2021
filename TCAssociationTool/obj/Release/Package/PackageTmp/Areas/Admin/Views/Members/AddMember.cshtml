            if ($('#ChequeNo').val() == "") { $('#spanChequeNo').html('ChequeNo Required.'); $('#ChequeNo').focus(); return false; } else { $('#spanChequeNo').html(''); $('#ChequeNo').focus().removeClass("red-border"); }
