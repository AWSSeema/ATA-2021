@{
    ViewBag.Title = "AddMailTemplate";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";

    TCAssociationTool.Entities.Vaccinations objVaccinations = ViewBag.objVaccinations;
}

<script type="text/javascript" src="ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="ckfinder/ckfinder.js"></script>


<script>

    function Validate() {
        var return_val = true;

        if ($.trim($('#comments').val()) == '') { document.getElementsByName('comments')[0].placeholder = 'Required'; $('#comments').focus().addClass("validate"); return false; } else { $('#comments').focus().removeClass("validate"); }
     

        return return_val;
    }
</script>
<!-- breadcumb -->
<div class="content-header">
    <h1>Vaccinations</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="@Url.Action("Index", "Vaccinations")"><i class="fa fa-print"></i>Vaccinations</a></li>
        <li class="active">View Vaccinations</li>
    </ol>
</div>
<!--end breadcumb -->

<div class="content">
    <!-- Main content -->
    <div id="divmessage">
        @if (TempData["message"] != null)
        {@Html.Raw(TempData["message"].ToString())}

        @if (ViewBag.message != null)
        {@Html.Raw(ViewBag.message.ToString())}
    </div>
    <div class="box validation">
        <!-- /.box-header -->
        <div class="box-header">
            <h3 class="box-title dis-in">View Vaccination Details</h3>
        </div>

        @using (Html.BeginForm("VaccinationsCommentUpdate", "Vaccinations", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="hidden" name="Id" id="Id" value="@objVaccinations.Id" />
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>Member Name :</label>
                        @objVaccinations.membername
                    </div>
                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>Position :</label>
                        @objVaccinations.position
                    </div>
                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>Relation :</label>
                        @objVaccinations.relation
                    </div>

                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>First Name :</label>
                        @objVaccinations.firstname
                    </div>

                </div>
            </div>


            <div class="box-body">
                <div class="row">

                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>Last Name :</label>
                        @objVaccinations.lastname
                    </div>
                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>Contact Phone :</label>
                        @objVaccinations.phone
                    </div>

                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>Age :</label>
                        @objVaccinations.age
                    </div>
                    <div class="col-xs-12 col-lg-3 col-sm-6">
                        <label>Date Sent :</label>
                        @(objVaccinations.datesent != null && objVaccinations.datesent != DateTime.MinValue ? objVaccinations.datesent.ToString("dd/MM/yyyy") : "N/A")
                    </div>

                </div>
            </div>



            <div class="box-body">
                <div class="row">

                    <div class="col-xs-12 col-lg-4 col-sm-6">
                        <label>Comments : </label>
                        <textarea id="comments" name="comments" class="form-control">@objVaccinations.comments</textarea>
                        <span class="field-validation-error" id="spancomments"></span>

                    </div>

                </div>
            </div>

            <div class="box">
                <!-- /.box-header -->
                <div class="box-body text-right">
                    <input type="submit" onclick="return Validate()" class="btn btn-primary" id="add" value="Submit" name="add">
                    <a class="btn btn-info" href="@Url.Action("Index", "Vaccinations")">Cancel</a>
                </div>
                <!-- /.box-body -->
            </div>
        }
            <!-- /.box-body -->
        </div>
    <!-- /.content -->
</div>

